<h1>Регистрация</h1>

<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) do | form | %>
  <%= devise_error_messages! %>

  <%= form.input :last_name, :required => true, :input_html => { :autofocus => true } %>
  <%= form.input :first_name, :required => true %>
  <%= form.input :middle_name %>
  <%= form.input :email, :required => true %>
  <%= form.input :password, :required => true, :input_html => { :autocomplete => :off } %>
  <%= form.input :password_confirmation, :required => true %>
  <%= form.submit 'Зарегистрироваться', :class => 'button' %>
  <%= render :partial => 'shared/links' %>
<% end %>
